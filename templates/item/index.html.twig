{% extends 'base.html.twig' %}

{% block body %}
	<table class="table table-hover">
		<thead>
		<th class="createdAt">{{ 'Created at'|trans }}</th>
		<th>{{ 'Data'|trans }}</th>
		</thead>
		<tbody>
		{% for item in items %}
			<tr>
				<td class="createdAt">{{ item.createdAt|date('Y-m-d H:i:s') }}</td>
				<td><div data-json="{{ item.data|json_encode }}">{{ item.data|json_encode }}</div></td>
			</tr>
		{%  endfor %}
		</tbody>
	</table>
{% endblock %}

{% block stylesheets %}
	<link rel="stylesheet" href="{{ asset('build/item.css') }}">
{% endblock %}

{% block javascripts %}
	<script src="{{ asset('build/item.js') }}"></script>
{% endblock %}
